---
/** There's a bug with mdx and Astro where p tags on new lines add empty p tags around the content.
 * Unfortunately our linter / prettier automatically puts those tags on new lines for large blocks
 * and so I've added the quickstart content to prettierignore for now. */
---

<article id="article">
  <slot />
</article>

<style>
  #article {
    margin-top: var(--space-10x);
  }

  #article :global(*) {
    margin-top: 0;
    margin-bottom: 0;
    max-width: 100%;
  }

  #article :global(section > *) {
    margin-top: var(--space-5x);
  }

  #article :global(p + ul) {
    margin-top: 0;
  }

  #article :global(section) {
    scroll-margin-top: var(--theme-navbar-height);
  }

  #article :global(h2) {
    color: black;
    font-size: 20px;
    margin: var(--space-10x) 0 calc(-1 * var(--space-5x));
    padding-top: 0;
    padding-bottom: var(--space-5x);
    top: var(--theme-navbar-height);
    position: sticky;
    z-index: 1;
    background: rgb(255, 255, 255);
    background: linear-gradient(0deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 10%);
  }

  #article :global(li) {
    line-height: 1.5;
  }

  #article :global(ul) {
    list-style: none;
  }

  #article :global(ul > li) {
    display: flex;
  }

  #article :global(ul > li::before) {
    position: relative;
    content: "●";
    font-size: 0.5rem;
    top: 6px;
    left: -0.5rem;
  }

  #article :global(ol) {
    padding-left: 0;
    counter-reset: counter;
  }

  #article :global(ol > li:first-of-type) {
    border-top: 1px solid var(--gray-300, #ced0d5);
  }

  #article :global(ol > li) {
    padding: var(--space-2x) 0px;
    border-bottom: 1px solid var(--gray-300, #ced0d5);
    list-style: none;
  }

  #article :global(details) {
    overflow: hidden;
  }

  #article :global(details > summary) {
    display: grid;
    grid-template-columns: 0 1fr auto;
    align-items: center;
    gap: var(--space-8x);
    cursor: pointer;
    color: var(--blue-800, #1a2b6b);
    font-size: 16px;
  }

  #article :global(details > summary::before) {
    content: counters(counter, ".") "";
    counter-increment: counter;
    color: var(--gray-400, #b7bac0);
    letter-spacing: -0.24px;
  }

  #article :global(details > summary::after) {
    content: url(/images/quickstarts/arrow-down.svg);
    -webkit-mask: url(/images/quickstarts/arrow-down.svg) no-repeat center;
    -webkit-mask-size: var(--space-6x);
    background-color: var(--gray-400, #b7bac0);
    transition: 0.25s transform ease;
  }

  /* Using custom attribute 'expanded' (created by Accordion)
  rather than 'open' since some browsers (Safari) have no respect for details attributes */
  #article :global(details[expanded] > summary::after) {
    transform: rotate(180deg);
    background-color: #174cc2;
  }

  #article :global(details > :not(summary)) {
    margin-top: 0;
    padding-left: var(--space-8x);
    padding-top: var(--space-6x);
  }

  #article :global(details > :not(summary):last-child) {
    padding-bottom: var(--space-3x);
  }

  @media (min-width: 48em) {
    #article :global(section > *) {
      margin-top: var(--space-6x);
    }

    #article :global(h2) {
      font-size: 28px;
      margin: calc(var(--space-6x) - var(--space-5x)) 0 calc(-1 * var(--space-6x));
      padding: var(--space-5x) 0 var(--space-6x);
      color: var(--blue-800, #1a2b6b);
    }

    #article :global(ol > li) {
      padding: var(--space-3x) 0px;
    }

    #article :global(details > summary) {
      font-size: 20px;
    }
  }

  /* NOTE: Done at 50em since mobile header appears at this point */
  @media (min-width: 50em) {
    #article :global(section) {
      scroll-margin-top: 20vh;
    }
    #article :global(h2) {
      top: 0;
    }
  }
</style>

<script>
  import { Accordion } from "./accordion"
  document.querySelectorAll("details").forEach((el) => new Accordion(el))

  // Wrap sections in <section> tags
  // Allows us to create sticky headers
  const children = document.querySelectorAll("article > *")
  for (var i = 0; i < children.length; i++) {
    if (children[i].nodeName === "H2") {
      const wrapper = document.createElement("section")
      wrapper.id = children[i].id
      children[i].parentNode!.insertBefore(wrapper, children[i])
      wrapper.appendChild(children[i])
      for (var j = i + 1; j < children.length; j++) {
        if (children[j].nodeName === "H2") {
          break
        }
        wrapper.appendChild(children[j])
      }
      i = j - 1
    }
  }
</script>
